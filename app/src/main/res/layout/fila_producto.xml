<?xml version="1.0" encoding="utf-8"?>
<com.mauge.carritocompras_maeugeniacalle.CheckedLinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_filas">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textcodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cod."
            android:layout_toRightOf="@id/textcodigo"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/producto"
        android:textAppearance="@android:style/TextAppearance.Large"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/preciosimbolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Bs. "
                android:layout_toRightOf="@id/preciosimbolo"
                android:textSize="20dip" />
            <TextView
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/precio"
                android:textSize="20dip" />

    </LinearLayout>



</com.mauge.carritocompras_maeugeniacalle.CheckedLinearLayout>